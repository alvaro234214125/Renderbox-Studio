---
// src/components/sections/Portfolio.astro
import { Image } from "astro:assets";
import ArrowUpRight from "lucide-static/icons/arrow-up-right.svg?raw";
import Icon from "../ui/Icon.astro";
// --- DATOS DE TUS PROYECTOS ---
// Simplemente añade o quita objetos de este array para gestionar tu portafolio.
const projects = [
  {
    title: "Sitio Web Institucional",
    category: "Pagina Web Profesional & SEO",
    coverImage: "/projects/web-institucional.webp",
    link: "https://inyawaperu.pe/",
  },
  {
    title: "Portafolio Personal",
    category: "Pagina Web Profesional & SEO",
    coverImage: "/projects/portafolio-personal.webp",
    link: "https://alvarodiazchang.netlify.app/",
  },
  {
    title: "Sistema de Gestión Académica",
    category: "Plataforma Web & AWS",
    coverImage: "/projects/sistema-gestion.webp",
    link: "https://www.campusvirtualinyawaperu.com/", // Si no tiene enlace, puedes poner "#" o la URL de un caso de estudio
  },
];  

const processSteps = [
    { title: "Descubrimiento", description: "Entendemos tus metas." },
    { title: "Diseño UX/UI", description: "Creamos interfaces atractivas." },
    { title: "Desarrollo", description: "Construimos con código limpio." },
    { title: "Lanzamiento", description: "Desplegamos tu solución." },
];

---

<section id="proyectos" class="py-16 md:py-20 scroll-mt-30 md:pt-0 pt-0 mb-10 md:mb-10">
  <div class="container mx-auto px-6 md:px-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16">
      
      <!-- Columna Izquierda (Se quedará 'pegada') -->
      <div class="md:sticky md:top-24 self-start">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight mb-6 text-center md:text-left">
  Nuestros 
  <span class="inline-flex items-center justify-center bg-indigo-500 rounded-md px-1 sm:px-2 h-12 sm:h-14 text-white pb-2">
    Proyectos
  </span>
</h2>
        <p class="text-lg text-gray-700 max-w-md text-center md:text-left mx-auto md:mx-0">
          Aquí hay una selección de trabajos que demuestran nuestra capacidad para transformar ideas en soluciones digitales robustas y atractivas.
        </p>
      
      <div class="mt-12 space-y-12">
        <div>
                <h3 class="font-bold text-gray-800 mb-4">Nuestro Proceso</h3>
                <ul class="space-y-4">
                    {processSteps.map((step, index) => (
                        <li class="flex items-start gap-4">
                            <div class="flex-shrink-0 bg-indigo-200 text-indigo-600 font-bold text-sm h-6 w-6 rounded-full flex items-center justify-center">
                                {index + 1}
                            </div>
                            <div>
                                <p class="font-semibold text-gray-800">{step.title}</p>
                                <p class="text-sm text-gray-600">{step.description}</p>
                            </div>
                        </li>
                    ))}
                </ul>
            </div>
      </div>
      </div>
      <!-- Columna Derecha (Scroll con Mockups) -->
      <div class="flex flex-col gap-8">
        {projects.map((project) => (
          // CAMBIO: El contenedor ahora es una etiqueta <a>
          <a 
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative aspect-video w-full rounded-2xl overflow-hidden text-left border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300"
          >
            <img
              src={project.coverImage}
              alt={`Imagen del proyecto ${project.title}`}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
            <div class="relative h-full flex flex-col justify-end p-8">
              <h3 class="text-3xl font-bold text-white drop-shadow-lg">{project.title}</h3>
              <p class="text-white/80 drop-shadow-md mt-1">{project.category}</p>
            </div>
            <div 
              class="absolute top-6 right-6 bg-white/80 backdrop-blur-sm text-gray-900 h-12 w-12 rounded-full flex items-center justify-center transition-all duration-300 opacity-0 group-hover:opacity-100 scale-90 group-hover:scale-100 z-10"
              aria-hidden="true"
            >
              <Icon icon={ArrowUpRight} class="h-6 w-6" />
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>