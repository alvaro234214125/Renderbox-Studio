---
// src/components/sections/Portfolio.astro
import { Image } from "astro:assets";

// --- DATOS DE TUS PROYECTOS ---
// Simplemente añade o quita objetos de este array para gestionar tu portafolio.
const projects = [
  {
    title: "Sistema de Gestión Académica",
    description: "Desarrollamos una plataforma web completa para la administración de alumnos, matrículas, pagos, asistencias y notas. Una solución robusta desplegada en la nube para máxima disponibilidad y seguridad.",
    image: "/projects/sistema-gestion.webp", // Reemplaza con la captura de tu sistema
    tags: ["React", "Java", "MySQL", "AWS", "Sistema Web"],
    link: "https://www.campusvirtualinyawaperu.com/", // Si tienes un demo, pon el enlace aquí
  },
  {
    title: "Sitio Web para Institución Educativa",
    description: "Diseño y desarrollo de un portal web dinámico y fácil de administrar para una institución, utilizando un constructor visual para la gestión de contenido y funcionalidades a medida con JavaScript.",
    image: "/projects/web-institucional.webp", // Reemplaza con la captura de la web
    tags: ["WordPress", "Elementor", "JavaScript", "Sitio Web"],
    link: "https://inyawaperu.pe/", // Reemplaza con el enlace real de la página
  },
];

const processSteps = [
    { title: "Descubrimiento", description: "Entendemos tus metas y definimos la estrategia." },
    { title: "Diseño UX/UI", description: "Creamos interfaces intuitivas y atractivas." },
    { title: "Desarrollo", description: "Construimos tu proyecto con código limpio y escalable." },
    { title: "Lanzamiento", description: "Desplegamos tu solución y te acompañamos en el proceso." },
];

---

<section id="proyectos" class="py-16 md:py-20 scroll-mt-30 md:pt-0 pt-0 mb-10 md:mb-10">
  <div class="container mx-auto px-6 md:px-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16">
      
      <!-- Columna Izquierda (Se quedará 'pegada') -->
      <div class="md:sticky md:top-24 self-start">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight mb-6 text-center md:text-left">
  Nuestros 
  <span class="inline-flex items-center justify-center bg-indigo-500 rounded-md px-1 sm:px-2 h-12 sm:h-14 text-white pb-2">
    Proyectos
  </span>
</h2>
        <p class="text-lg text-gray-700 max-w-md text-center md:text-left mx-auto md:mx-0">
          Aquí hay una selección de trabajos que demuestran nuestra capacidad para transformar ideas en soluciones digitales robustas y atractivas.
        </p>
      
      <div class="mt-12 space-y-12">
        <div>
                <h3 class="font-bold text-gray-800 mb-4">Nuestro Proceso</h3>
                <ul class="space-y-4">
                    {processSteps.map((step, index) => (
                        <li class="flex items-start gap-4">
                            <div class="flex-shrink-0 bg-indigo-200 text-indigo-600 font-bold text-sm h-6 w-6 rounded-full flex items-center justify-center">
                                {index + 1}
                            </div>
                            <div>
                                <p class="font-semibold text-gray-800">{step.title}</p>
                                <p class="text-sm text-gray-600">{step.description}</p>
                            </div>
                        </li>
                    ))}
                </ul>
            </div>
      </div>
      </div>
      <!-- Columna Derecha (Hará scroll) -->
      <div class="flex flex-col gap-12">
        {projects.map((project) => (
          <a href={project.link} target="_blank" rel="noopener noreferrer" class="group block">
            <div class="bg-gray-50/80 backdrop-blur-sm border border-gray-200/80 p-6 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="overflow-hidden rounded-lg mb-6">
                <!-- Usamos una etiqueta 'img' normal para assets en /public -->
                <img
                  src={project.image}
                  alt={`Imagen del proyecto ${project.title}`}
                  class="w-full h-auto object-cover aspect-video group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-2">{project.title}</h3>
              <p class="text-gray-600 mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2">
                {project.tags.map(tag => (
                  <span class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded-full">{tag}</span>
                ))}
              </div>
            </div>
          </a>
        ))}
      </div>

    </div>
  </div>
</section>