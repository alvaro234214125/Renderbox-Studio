---
// src/components/layouts/Footer.astro
import Linkedin from "lucide-static/icons/linkedin.svg?raw";
import Github from "lucide-static/icons/github.svg?raw";
import Twitter from "lucide-static/icons/twitter.svg?raw";
import Icon from "../ui/Icon.astro";

const socialLinks = [
  { href: "https://www.linkedin.com/in/alvarodiazchang/", label: "LinkedIn", icon: Linkedin },
  { href: "https://github.com/alvaro234214125", label: "GitHub", icon: Github },
];

const navLinks = [
  { href: "#nosotros", label: "Nosotros" },
  { href: "#servicios", label: "Servicios" },
  { href: "#proyectos", label: "Proyectos" },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-400">
  <div class="container mx-auto px-6 sm:px-8 md:px-10 lg:px-20 py-12 md:pt-10 md:pb-7">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-10 md:gap-8 items-start text-center md:text-left">

      <!-- Columna Izquierda: Logo y Descripción -->
      <div class="md:col-span-5 lg:col-span-6 flex flex-col items-center md:items-start">
        <a href="/" class="flex items-center justify-center md:justify-start gap-3 text-xl font-bold text-white mb-4">
          <img src="/renderbox-logo.svg" alt="Renderbox Studio Logo Blanco" class="h-8 w-auto" />
          <span>Renderbox Studio</span>
        </a>
        <p class="max-w-xs sm:max-w-sm text-sm sm:text-base leading-relaxed">
          Transformando ideas en soluciones digitales innovadoras que impulsan el crecimiento.
        </p>
      </div>

      <!-- Columnas de Links -->
      <div class="md:col-span-7 lg:col-span-6 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 justify-items-center md:justify-items-start mt-8 md:mt-0">
        <div>
          <h3 class="font-semibold text-white mb-4 text-base sm:text-lg">Navegación</h3>
          <ul class="space-y-2">
            {navLinks.map(link => (
              <li>
                <a href={link.href} class="hover:text-white transition-colors text-sm sm:text-base">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="font-semibold text-white mb-4 text-base sm:text-lg">Contacto</h3>
          <ul class="space-y-2">
            <li>
              <a href="#contacto" class="hover:text-white transition-colors text-sm sm:text-base">
                Cotiza tu Proyecto
              </a>
            </li>
            <li>
              <a href="mailto:info.renderbox.studio@gmail.com" class="hover:text-white transition-colors text-sm sm:text-base break-words">
                info.renderbox.studio@gmail.com
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Sub-Footer -->
    <div class="mt-12 border-t border-gray-800 pt-8 flex flex-col md:flex-row-reverse justify-between items-center gap-6">
      <div class="flex gap-4">
        {socialLinks.map(link => (
          <a 
            href={link.href} 
            target="_blank" 
            rel="noopener noreferrer" 
            aria-label={link.label} 
            class="text-gray-400 hover:text-white transition-colors"
          >
            <Icon icon={link.icon} class="h-6 w-6 sm:h-7 sm:w-7" />
          </a>
        ))}
      </div>
      <p class="text-xs sm:text-sm text-center md:text-left">
        &copy; {currentYear} Renderbox Studio. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
