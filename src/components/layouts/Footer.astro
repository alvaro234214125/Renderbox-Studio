---
// src/components/layouts/Footer.astro
import Linkedin from "lucide-static/icons/linkedin.svg?raw";
import Github from "lucide-static/icons/github.svg?raw";
import Twitter from "lucide-static/icons/twitter.svg?raw";
import Icon from "../ui/Icon.astro";

const socialLinks = [
  { href: "https://linkedin.com", label: "LinkedIn", icon: Linkedin },
  { href: "https://github.com", label: "GitHub", icon: Github },
  { href: "https://twitter.com", label: "Twitter", icon: Twitter },
];

const navLinks = [
  { href: "#nosotros", label: "Nosotros" },
  { href: "#servicios", label: "Servicios" },
  { href: "#proyectos", label: "Proyectos" },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-400">
  <div class="container mx-auto px-10 py-12 md:pt-10 md:pb-7">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8">

      <!-- Columna Izquierda: Logo y Descripción -->
      <div class="md:col-span-5 lg:col-span-6">
        <a href="/" class="flex items-center gap-3 text-xl font-bold text-white mb-4">
          <img src="/renderbox-logo.svg" alt="Renderbox Studio Logo Blanco" class="h-8 w-auto" />
          <span>Renderbox Studio</span>
        </a>
        <p class="max-w-xs">
          Transformando ideas en soluciones digitales innovadoras que impulsan el crecimiento.
        </p>
      </div>

      <!-- Columnas de Links -->
      <div class="md:col-span-7 lg:col-span-6 grid grid-cols-2 md:grid-cols-3 gap-8">
        <div>
          <h3 class="font-semibold text-white mb-4">Navegación</h3>
          <ul class="space-y-2">
            {navLinks.map(link => (
              <li><a href={link.href} class="hover:text-white transition-colors">{link.label}</a></li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="font-semibold text-white mb-4">Contacto</h3>
          <ul class="space-y-2">
            <li><a href="#contacto" class="hover:text-white transition-colors">Cotiza tu Proyecto</a></li>
            <li><a href="mailto:hola@renderbox.studio" class="hover:text-white transition-colors">hola@renderbox.studio</a></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Sub-Footer: Copyright y Sociales -->
    <div class="mt-12 border-t border-gray-800 pt-8 flex flex-col md:flex-row-reverse justify-between items-center gap-4">
       <div class="flex gap-4">
        {socialLinks.map(link => (
          <a href={link.href} target="_blank" rel="noopener noreferrer" aria-label={link.label} class="text-gray-400 hover:text-white transition-colors">
            <Icon icon={link.icon} class="h-6 w-6" />
          </a>
        ))}
      </div>
      <p class="text-sm text-center md:text-left">
        &copy; {currentYear} Renderbox Studio. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>